{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}
